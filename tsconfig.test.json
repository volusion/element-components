{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["jest", "@testing-library/jest-dom"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",

{
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "paths": {
      "app/*": ["./app/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["dist", "build", "node_modules"]
}


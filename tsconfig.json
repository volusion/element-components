{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": ["dom", "es5", "es2015.promise", "es6", "es7"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"],
    "exclude": ["dist", "docs", "node_modules", "lib", "es", "build", "**/*.spec.ts", "**/*.spec.tsx", "**/*.js"]
}

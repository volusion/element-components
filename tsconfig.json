{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true, // added
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es2015.promise", "es6", "es7"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["dist", "docs", "node_modules"]
}
